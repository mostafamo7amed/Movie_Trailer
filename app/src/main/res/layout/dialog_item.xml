<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/custom_background"
    tools:context=".TrendsSettings">

    <TextView
        android:id="@+id/tx_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customize your search target"
        android:textColor="@color/orange"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <RadioGroup
        android:id="@+id/group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/tx_target"
        >
        <RadioButton
            android:id="@+id/radio_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movies"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:checked="true" />
        <RadioButton
            android:id="@+id/radio_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV"
            android:textSize="20sp"
            android:textColor="@color/white" />
        <RadioButton
            android:id="@+id/radio_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actors"
            android:textSize="20sp"
            android:textColor="@color/white" />
        <RadioButton
            android:id="@+id/radio_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textSize="20sp"
            android:textColor="@color/white" />
    </RadioGroup>
    <TextView
        android:id="@+id/tx_target2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customize your search time"
        android:textColor="@color/orange"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@id/tx_target"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group1"/>
    <RadioGroup
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/tx_target2"
        >
        <RadioButton
            android:id="@+id/radio_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:checked="true" />
        <RadioButton
            android:id="@+id/radio_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly"
            android:textSize="20sp"
            android:textColor="@color/white" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>