<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".Fragments.Profile_fragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:background="@drawable/profile_background"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:paddingTop="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center|top"
                app:cardBackgroundColor="@color/orange"
                android:baselineAlignBottom="false"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="97dp"
                    android:layout_height="97dp"
                    app:cardCornerRadius="48.5dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/defult_pic"
                        />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/orange"
                android:text="Mostafa moahmed"
                android:maxLines="1"
                android:padding="5dp"
                android:layout_margin="5dp"/>


            <TextView
                android:id="@+id/pro_pData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Personal data"
                app:drawableStartCompat="@drawable/ic_account" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_view"/>
            <TextView
                android:id="@+id/pro_mlike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:drawablePadding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Liked movies"
                app:drawableStartCompat="@drawable/ic_movies" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_view"/>
            <TextView
                android:id="@+id/pro_tLike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:drawablePadding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Liked TV"
                app:drawableStartCompat="@drawable/ic_live_tv" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_view"/>
            <TextView
                android:id="@+id/pro_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:drawablePadding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Language"
                app:drawableStartCompat="@drawable/ic_language" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_view"/>
            <TextView
                android:id="@+id/pro_ask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Ask question"
                app:drawableStartCompat="@drawable/ic_help" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_view"/>
            <TextView
                android:id="@+id/pro_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:drawablePadding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Settings"
                app:drawableStartCompat="@drawable/ic_settings" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_view"/>
            <TextView

                android:text="Logout"
                android:textColor="@color/white"
                android:id="@+id/signOut"
                android:textSize="25sp"
                android:drawablePadding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_logout" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>